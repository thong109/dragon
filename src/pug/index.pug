extends _layout/_page

block variable
  - var path = "."
  - var pathID = "top"
  - var metaTitle = "Top"
  - var metaDescription = ""
  - var imgCommonPC  = path+"/img/common/"
  - var imgCommonSP  = path+"/img/common/sp/"
  - var imgLocalPC  = path+"/img/top/"
  - var imgLocalSP  = path+"/img/top/sp/"

block main
  main
    .page-common-parallax
      section.section-top-keyvisual
        .outer-common
          .outer-viewport
            .outer-wrapper
              .slider-top-keyvisual
                .slider-viewport.swiper.js-slider-keyvisual
                  .slider-wrapper.swiper-wrapper
                    .slider-slide.swiper-slide
                      .slide-banner(data-swiper-parallax="20%" data-swiper-parallax-opacity="1")
                        img.object-common(src=imgLocalPC+"keyvisual_img_01.jpg" width="1920" height="1050" loading="eager" alt="")
                    .slider-slide.swiper-slide
                      .slide-banner(data-swiper-parallax="20%" data-swiper-parallax-opacity="1")
                        img.object-common(src=imgLocalPC+"keyvisual_img_02.jpg" width="1920" height="1050" loading="eager" alt="")
                    .slider-slide.swiper-slide
                      .slide-banner(data-swiper-parallax="20%" data-swiper-parallax-opacity="1")
                        img.object-common(src=imgLocalPC+"keyvisual_img_03.jpg" width="1920" height="1050" loading="eager" alt="")
                    .slider-slide.swiper-slide
                      .slide-banner(data-swiper-parallax="20%" data-swiper-parallax-opacity="1")
                        img.object-common(src=imgLocalPC+"keyvisual_img_04.jpg" width="1920" height="1050" loading="eager" alt="")
                  .swiper-pagination
      section.section-top-information
        .outer-common
          .outer-viewport
            .outer-wrapper
              .wrapper
                h2.title-common-primary Thông tin tổng quan
                .information-controller
                  a(href="#").button-common-primary
                    span.button-wrapper XEM THÊM
                .list-top-information
                  ul.list-wrapper
                    li.list-item
                      .item-wrapper
                        h3.item-title TÊN DỰ ÁN
                        ul.item-list
                          li KDC Mai Bá Hương
                    li.list-item
                      .item-wrapper
                        h3.item-title CHỦ ĐẦU TƯ
                        ul.item-list
                          li Tandoland
                    li.list-item
                      .item-wrapper
                        h3.item-title ĐƠN VỊ PHÁT TRIỂN
                        ul.item-list
                          li Công Ty CP Mai Bá Hương <br>- MBH
                    li.list-item
                      .item-wrapper
                        h3.item-title QUY MÔ
                        ul.item-list
                          li 146,8ha với tổng sản phẩm: 5338 nền, 4 block chung cư
                    li.list-item
                      .item-wrapper
                        h3.item-title GIAI ĐOẠN XD
                        ul.item-list
                          li Giai đoạn 1: 2.008 nền
                          li Giai đoạn 2: 989 nền
                          li Giai đoạn 3: 977 nền
                          li Giai đoạn 4: 1346 nền
                    li.list-item
                      .item-wrapper
                        h3.item-title PHÁP LÝ
                        ul.item-list
                          li Có quy hoạch 1/500 - Sổ riêng từng nền - Sang tên khách hàng – Xây dựng tự do.
      section.section-top-introduction
        .outer-common
          .outer-viewport
            .outer-wrapper
              .wrapper
                img.object-common(src=imgLocalPC+"introduction_img_01.jpg" width="1621" height="846" loading="eager" alt="")
      section.section-top-area
        .outer-common
          .outer-viewport
            .outer-wrapper
              .area-viewport
                .area-wrapper
                  h2.title-common-primary.is-lion.is-start VỊ TRÍ DỰ ÁN
                  figure.area-direction
                    img.object-common(src=imgLocalPC+"area_img_02.png" width="402" height="437" loading="eager" alt="VỊ TRÍ DỰ ÁN")
      section.section-top-utilities
        .outer-common
          .outer-viewport
            .outer-wrapper
              .wrapper
      section.section-top-plan
        .outer-common
          .outer-viewport
            .outer-wrapper
              .plan-viewport
                .wrapper
                  h2.title-common-primary Mặt bằng tổng thể
      section.section-top-library
        .outer-common
          .outer-viewport
            .outer-wrapper
              .wrapper
                h2.title-common-primary.is-lion Thư viện
              .slider-top-library.js-slider-library
                .slider-viewport.swiper
                  .slider-wrapper.swiper-wrapper
                    .slider-slide.swiper-slide
                      figure.slide-banner
                        img.object-common(src=imgLocalPC+"library_img_01.jpg" width="1070" height="658" loading="eager" alt="HÌNH ẢNH TỔNG THỂ DỰ ÁN")
                      .slide-wrapper
                        span.slide-label HÌNH ẢNH TỔNG THỂ DỰ ÁN
                        span.slide-arrow.is-previous.trans(data-slider-role="arrow-previous")
                        span.slide-arrow.is-next.trans(data-slider-role="arrow-next")
                    .slider-slide.swiper-slide
                      figure.slide-banner
                        img.object-common(src=imgLocalPC+"library_img_02.jpg" width="1070" height="658" loading="eager" alt="HÌNH ẢNH TỔNG THỂ DỰ ÁN")
                      .slide-wrapper
                        span.slide-label HÌNH ẢNH TỔNG THỂ DỰ ÁN
                        span.slide-arrow.is-previous.trans(data-slider-role="arrow-previous")
                        span.slide-arrow.is-next.trans(data-slider-role="arrow-next")
                    .slider-slide.swiper-slide
                      figure.slide-banner
                        img.object-common(src=imgLocalPC+"library_img_03.jpg" width="1070" height="658" loading="eager" alt="HÌNH ẢNH TỔNG THỂ DỰ ÁN")
                      .slide-wrapper
                        span.slide-label HÌNH ẢNH TỔNG THỂ DỰ ÁN
                        span.slide-arrow.is-previous.trans(data-slider-role="arrow-previous")
                        span.slide-arrow.is-next.trans(data-slider-role="arrow-next")
      section.section-top-news
        .outer-common
          .outer-viewport
            .outer-wrapper
              .wrapper
                h2.title-common-primary.is-lion Tin tức
